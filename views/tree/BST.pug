extends ../layout 
block stylesheets 
    link(href='/css/trees/BST.css' rel='stylesheet')

block container
    section#intro
        .container
            .row
                .col-md-12
                    div.circular
                    i.fas.fa-info-circle.tips
                    div.methods
                        div.traversal
                            button.btn.btn-outline-danger.traversal.preOrder(type='button') Preorder
                            button.btn.btn-outline-danger.traversal.inOrder(type='button') Inorder
                            button.btn.btn-outline-danger.traversal.postOrder(type='button') Postorder
                    canvas#canvas.BST.col-md-12(width="1600" height= "550")
                    div.methods
                        div.insert.method
                            span Insert
                            input.input.insertValue(type="text" placeholder='value' maxlength="3")
                            button.btn.btn-success.insertGo(type='button') Go
                        div.search.method
                            span Search
                            input.input.searchValue(type="text" placeholder='value' maxlength="3")
                            button.btn.btn-success.searchGo(type='button') Go

block javascript 
    script(src='/js/trees/BST.js')